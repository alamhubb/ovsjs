{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch OVS LSP Client",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/ovs-vscode-client",
        "--user-data-dir=${workspaceFolder}/ovs-vscode-client/.vscode-test-data"
      ],
      "outFiles": [
        "${workspaceFolder}/ovs-vscode-client/client/out/**/*.js"
      ],
      "autoAttachChildProcesses": true,
      "preLaunchTask": "npm: watch - ovs-vscode-client",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/typescript/lib/**",
        "**/typescript.js"
      ]
    }
  ]
}

