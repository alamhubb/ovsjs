{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch OVS LSP Client",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/ovs-vscode-client"
      ],
      "outFiles": [
        "${workspaceFolder}/ovs-vscode-client/out/**/*.js",
        "${workspaceFolder}/ovs-lang-server/dist/**/*.js"
      ],
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/typescript/lib/**",
        "**/typescript.js"
      ]
    }
  ]
}

