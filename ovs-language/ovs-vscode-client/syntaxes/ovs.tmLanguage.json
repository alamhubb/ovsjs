{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "OVS (Object-oriented View Syntax)",
  "scopeName": "source.ovs",
  "patterns": [
    { "include": "#ovs-keywords" },
    { "include": "source.js" }
  ],
  "repository": {
    "ovs-keywords": {
      "patterns": [
        {
          "name": "keyword.control.ovs",
          "match": "\\b(ovsView)\\b",
          "comment": "OVS specific keyword for view definition"
        },
        {
          "name": "support.function.dom.ovs",
          "match": "\\b(div|span|p|h[1-6]|a|img|ul|ol|li|table|tr|td|th|thead|tbody|tfoot|form|input|button|select|option|textarea|label|header|footer|nav|section|article|aside|main|figure|figcaption|video|audio|canvas|svg|iframe)\\b",
          "comment": "OVS HTML element functions"
        }
      ]
    }
  }
}
